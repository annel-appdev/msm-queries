<h1>List of all actors</h1>

  <table border="1">

    <tr>
      <th>
      ID
      </th>

      <th>
      Image
      </th>

      <th>
      Name
      </th>

      <th>
      Dob
      </th>

      <th>
      </th>
    </tr>

    <tr>
 <% @list_of_actors.each do |an_actor| %>
      <td>
      <%= an_actor.id %>
      </td>

      <td>
      <img src="<%= an_actor.image %>"
      </td>

      <td>
      <%= an_actor.name %>
      </td>

      <td>
      <%= an_actor.dob %>
      </td>

      <td>
      <a href="/actors/<%= an_actor.id %>">Show details</a>
      </td>

    </tr>
    <%end%>
  </table>

<h1>Actor #<%= @an_actor.id %>  details </h1>

<a href="/actors">Go back</a>

<hr>

<dl>

<dt>Name</dt>
<dd><%= @an_actor.name %></dd>

<dt>Dob</dt>
<dd><%= @an_actor.dob %></dd>

<dt>Bio</dt>
<dd><%= @an_actor.bio %></dd>

<dt>Image</dt>
<dd><img src="<%= @an_actor.image %>"></dd>

<dt>Created on</dt>
<dd><%= time_ago_in_words(@an_actor.created_at) %> ago </dd>

<dt>Updated on</dt>
<dd><%= time_ago_in_words(@an_actor.updated_at) %> ago </dd>

</dl>

<hr>

<h1>Filmography</h1>

<table border="1">
  <tr>
    <th>Title</th>
    <th>Year</th>
    <th>Director</th>
    <th>Character name</th>
    <th></th>
  </tr>

  <tr>
  <% @characters.each do |role| %>
  <% movie_id = Movie.where(:id => role.movie_id).at(0)%>%

    <td> <%= movie_id.title %> </td>
    <td> <%= movie_id.year %> </td>
  <% director = Director.where(:id => movie_id).at(0)%>
    <td> <%= director.name %> </td>
    <td> <%= role.name %> </td>
    <td> <a href="/movies/<%= movie_id.id %>">Show details</a></td>
    
  </tr>

  <% end %>
</table>
